<script> var recipeTitles = <%= @recipe_title.to_json.html_safe %> </script>

<div ng-controller="MainController" class="bodytext">
  <div class="large-padded-row">
  <p class="base">What Dish do you want to use as a base?</p>
    <div class="padded-row">
      <angucomplete id="ex1" placeholder="Enter Food" pause="100" selectedobject="recipe" localdata="titles" searchfields="name" titlefield="name" minlength="1" inputclass="form-control form-control-small" matchclass="highlight" ></angucomplete>
    </div>
    {{plate}}
    <div class="eatItBody" ng-show="recipe" class="clearfix">
      <p>You selected <span class="bold-span">{{recipe.originalObject.name}}</span> </p>
      <form name="ingredientForm" data-remote="true" id="recipeDropDown" >
	      <div class='left'>
      		<p>Of the ingredients included, which would you not like to see again?</p>
	      	<input type="hidden" value="{{recipe.originalObject.name}}" name="recipe_title"></input>
		      
		      <span class="bold-span" ng-repeat="ingredient in recipe.originalObject.ingredients">
		      	<p class="ingredient"><input type="checkbox" name="{{ingredient}}" value="{{ingredient}}"></input>{{ingredient}}</p>
		      </span>
		    </div>
		    <div class='right'>
		      <p>What ingredient would you be interested in seeing?</p>
		      <input id="ingredientInput" type="textarea" placeholder="Desired Ingredient"></input>
		      <button ng-click="getRecipes()" type="submit" value="submit" class="submit-button">Click to Button</button>
		    </div>
		</div>
      </form>
	</div>
	<div class="eatItBody">
		<div ng-repeat="recipe in resultsRecipes">
			<a class="matchedRecipeTitle" href="..." onclick="return false;">{{recipe.title}}:</a>
			<ul ng-hide="hideFlag">Ingredients:
				<span ng-repeat="ingredient in recipe.ingredient"><li class='Ingredient'>{{ingredient}}</li></span>
			</ul>
			<ul>Directions: 
				<span ng-repeat="direction in recipe.direction"><li class='Direction'>{{direction}}</li></span>
			</ul>
		</div>
	</div>
</div>	
